<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hcu.cfgcreator.MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="10dp"
        android:text="@string/s_aa_bx_axx_x_ab_b" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnOkEkle"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="Ağaç Listesini Getir" />

    <ListView
        android:id="@+id/lw1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn1"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnVirgulEkle"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText"
        android:layout_below="@+id/editText"
        android:layout_margin="10dp"
        android:text="' , ' Ekle" />

    <Button
        android:id="@+id/btnOkEkle"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="--> Ekle" />

    <Button
        android:id="@+id/btnAyracEkle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText"
        android:layout_below="@+id/editText"
        android:layout_margin="10dp"
        android:text="' | ' Ayraç Ekle" />

</RelativeLayout>
